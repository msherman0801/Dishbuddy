<div class="container bootstrap snippet">
    <div class="row">
  		<div class="col-sm-3"><!--left col-->
              

      <div class="text-center">
        <img src="/images/avatar.png" class="avatar img-circle img-thumbnail" alt="avatar">
        <h6 class="text-dark">Profile picture feature currently not available.</h6>
      </div></hr><br>
          
        <ul class="list-group">
            <li class="list-group-item text-muted">Activity <i class="fa fa-dashboard fa-1x"></i></li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Restaurants</strong></span> <%=@self.restaurants.count%></li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Reviews</strong></span> 0</li>
        </ul> 

        <ul class="list-group">
            <li class="list-group-item text-muted"><a href="/users/friends">Following (<%=@self.friends.count%>)</a><i class="fa fa-dashboard fa-1x"></i></li>
            <% @self.friends.each do |i| %>
            <li class="list-group-item text-right"><span class="pull-left"></span><a href="/users/<%=i.id%>"><%=i.username%></a></li>
            <% end %>
        </ul>
          
        </div><!--/col-3-->
        <div class="col-sm-9">
            <h1 class="text-dark"><%=@self.username%></h1>
                <hr>
                  <form class="form" method="POST" action="/users/profile">
                      <div class="form-group">
                          <div class="col-xs-6">
                              <label for="first_name"><h4 class="text-dark" class="text-dark">First name: <%=@self.first_name%></h4 class="text-dark"></label>
                              <input type="text" class="form-control" name="first_name" id="first_name" placeholder="First Name">
                          </div>
                      </div>

                      <div class="form-group">
                          <div class="col-xs-6">
                            <label for="last_name"><h4 class="text-dark">Last name: <%=@self.last_name%></h4 class="text-dark"></label>
                              <input type="text" class="form-control" name="last_name" id="last_name" placeholder="Last Name">
                          </div>
                      </div>
          
                      <div class="form-group">
                          <div class="col-xs-6">
                              <label for="phone"><h4 class="text-dark">Phone: <%=@self.phone_number%></h4 class="text-dark"></label>
                              <input type="text" class="form-control" name="phone_number" id="phone" placeholder="Phone Number">
                          </div>
                      </div>

                      <div class="form-group">
                          <div class="col-xs-6">
                              <label for="email"><h4 class="text-dark">Email: <%=@self.email%></h4 class="text-dark"></label>
                              <input type="email" class="form-control" name="email" id="email" placeholder="Email Address">
                          </div>
                      </div>

                      <div class="form-group">
                          <div class="col-xs-6">
                              <label for="email"><h4 class="text-dark">Location: <%=@self.location%></h4 class="text-dark"></label>
                              <input type="text" class="form-control" id="location" placeholder="Location">
                          </div>
                      </div>

                      <div class="form-group">
                        <div class="col-xs-6">
                            <label for="password"><h4 class="text-dark">Username: <%=@self.username%></h4 class="text-dark"></label>
                            <input type="text" class="form-control" name="username" id="username" placeholder="Username">
                        </div>
                      </div>

                      <div class="form-group">
                          <div class="col-xs-6">
                              <label for="password"><h4 class="text-dark">Password</h4 class="text-dark"></label>
                              <input type="password" class="form-control" name="password" id="password" placeholder="Password">
                          </div>
                      </div>

                      <div class="form-group">
                           <div class="col-xs-12">
                                <br>
                              	<button class="btn btn-lg btn-success" type="submit">Save</button>
                                <button class="btn btn-lg" type="reset">Reset</button>
                                <button class="btn btn-sm bg-danger" name="delete">Delete Account</button>
                            </div>
                      </div>
              	</form>
              
              <hr>

        </div><!--/col-9-->
    </div><!--/row-->